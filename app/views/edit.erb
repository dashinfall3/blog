<div class="container">
	<h3><%= @post.title %></h3>
	<p><%= @post.body %></p>

	<h3> Edit Blog Post </h3>
	<div class="new_post">
	  <form action="/post/<%=@post.id%>/edit" method="post">
	    <input type="text" name="post[title]" placeholder="<%=@post.title%>"><br>
	    <textarea rows=5 cols=55 name="post[body]" placeholder="<%=@post.body%>"> </textarea><br>
	    <input type="text" name="tags" placeholder="put in  your tags here"><br>
	    <input type="hidden" name="post[author_id]" value=1>
	    <input type="submit" name="submit" value="Post"><br>
	  </form>
	</div>
</div>